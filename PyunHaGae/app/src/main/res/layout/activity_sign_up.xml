<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="#1a659e"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="45dp">

        <TextView
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="아이디"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/join_edt_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="아이디를 입력해주세요"/>

        <Button
            android:id="@+id/join_btn_dupCheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:backgroundTint="#8e94f2"
            android:text="중복확인"
            android:textSize="10dp" />
    </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="비밀번호"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/join_edt_pw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="비밀번호를 입력해주세요"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="비밀번호 확인"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/join_edt_pw_re"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="다시 한 번 더 입력해주세요"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="E-Mail"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/join_edt_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="phone" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:text="\@"
            />
        <Spinner
            android:id="@+id/join_spin_eamil_addr"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:nextFocusDown="@+id/phone3"
            android:imeOptions="actionNext"
            android:ems="10"
            android:inputType="phone"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="전화번호"
            android:textSize="18dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <Spinner
                android:id="@+id/join_spin_first_num"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:nextFocusDown="@+id/phone2"
                android:imeOptions="actionNext"
                android:inputType="phone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="-"
                />
            <EditText
                android:id="@+id/join_edt_mid_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:nextFocusDown="@+id/phone3"
                android:imeOptions="actionNext"
                android:ems="10"
                android:inputType="phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="-"
                />
            <EditText
                android:id="@+id/join_edt_last_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="주소"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/join_tv_addr_num"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:gravity="center"
                android:hint="우편번호" />
            <Button
                android:id="@+id/join_btn_addr_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:backgroundTint="#8e94f2"
                android:text="검색"
                android:textSize="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/join_tv_addr"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:hint="주소"
                />
            <EditText
                android:id="@+id/join_edt_addr_detail"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="상세주소 입력"/>

        </LinearLayout>
    <Button
        android:id="@+id/join_btn_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입하기"
        android:textSize="15dp"
        android:backgroundTint="#5465ff"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/join_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="15dp"
        android:backgroundTint="#76c893"
        android:layout_marginTop="10dp"/>

</LinearLayout>